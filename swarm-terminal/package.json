{
  "name": "swarm-terminal",
  "version": "0.1.0",
  "description": "High-performance GPU-accelerated terminal emulator built from scratch",
  "main": "src/SwarmTerminal.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark": "node tests/benchmark.js",
    "lint": "eslint src/"
  },
  "keywords": [
    "terminal",
    "emulator",
    "webgl",
    "gpu",
    "ansi",
    "vt100"
  ],
  "author": "Swarm IDE Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "canvas": "^3.2.0",
    "eslint": "^8.56.0",
    "gl": "^8.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
