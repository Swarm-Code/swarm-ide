{
  "name": "swarmide",
  "version": "1.0.0",
  "description": "Electron IDE with Svelte",
  "main": "main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "postinstall": "electron-rebuild",
    "lint": "eslint . --ext .js,.svelte",
    "format": "prettier --write \"src/**/*.{js,svelte,css}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fontsource/press-start-2p": "^5.2.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tiptap/core": "^3.10.2",
    "@tiptap/pm": "^3.10.2",
    "@tiptap/starter-kit": "^3.10.2",
