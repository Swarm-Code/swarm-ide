{
  "name": "swarm-ide",
  "version": "2.0.4",
  "description": "Swarm IDE - AI-Powered Desktop Development Environment",
  "productName": "Swarm IDE",
  "main": "main.mjs",
  "type": "module",
  "bin": {
    "ide": "./cli.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "postinstall": "electron-rebuild",
    "lint": "eslint . --ext .js,.svelte",
    "format": "prettier --write \"src/**/*.{js,svelte,css}\"",
    "pack": "electron-builder --dir",
    "dist": "bun run build && electron-builder",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:linux": "bun run build && electron-builder --linux",
    "dist:all": "bun run build && electron-builder --mac --linux"
  },
  "keywords": [
    "ide",
    "editor",
    "ai",
    "development"
  ],
  "author": "Swarm-Code Team <luis@swarmcode.ai>",
  "license": "SEE LICENSE IN LICENSE",
  "build": {
    "appId": "com.swarm.ide",
    "productName": "Swarm IDE",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.mjs",
      "preload.cjs",
      "lsp-server-manager.mjs",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Swarm IDE"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@fontsource/press-start-2p": "^5.2.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "esbuild": "0.20.2",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tiptap/core": "^3.10.4",
    "@tiptap/pm": "^3.10.4",
    "@tiptap/starter-kit": "^3.10.4",
    "@xterm/addon-fit": "^0.10.0",
    "electron-store": "^11.0.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.0",
    "mermaid": "^11.12.1",
    "monaco-editor": "^0.54.0",
    "monaco-languageclient": "^10.2.0",
    "node-pty": "^1.0.0",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "xterm": "^5.3.0"
  },
  "overrides": {
    "esbuild": "0.20.2",
    "vite": {
      "esbuild": "0.20.2"
    }
  }
}
