  "description": "A simple Electron-based IDE for viewing files",
  "main": "main.js",
  "scripts": {
    "bundle": "browserify src/renderer.js -o dist/bundle.js --exclude keytar --exclude ssh2 --exclude electron --exclude @electron/remote",
