{
  "name": "swarm-ide",
  "version": "1.0.0",
  "description": "A powerful Electron-based IDE with SSH and file management",
  "main": "main.js",
  "scripts": {
    "bundle": "browserify src/renderer.js -o dist/bundle.js --exclude keytar --exclude ssh2 --exclude electron --exclude @electron/remote",
    "start": "npm run bundle && electron .",
    "dev": "npm run bundle && electron .",
    "build": "npm run bundle && electron-builder",
    "build:linux": "npm run bundle && electron-builder --linux",
    "build:dir": "npm run bundle && electron-builder --dir"
  },
  "keywords": [
    "electron",
    "ide",
    "file-viewer",
    "ssh",
    "code-editor"
  ],
  "author": "Swarm IDE",
  "license": "MIT",
  "build": {
    "appId": "com.swarmide.app",
    "productName": "Swarm IDE",
    "copyright": "Copyright Â© 2025 Swarm IDE",
    "npmRebuild": false,
    "directories": {
      "buildResources": "build",
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/test",
      "!node_modules/**/{test,__tests__,tests}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Development",
      "icon": "build/icons/icon.svg",
      "executableName": "swarm-ide",
      "synopsis": "A powerful Electron-based IDE",
      "description": "A powerful Electron-based IDE with SSH support and advanced file management capabilities",
      "desktop": {
        "entry": {
          "Name": "Swarm IDE",
          "GenericName": "Code Editor",
          "Comment": "Edit code and manage projects",
          "Keywords": "editor;development;ide;ssh;",
          "Categories": "Development;IDE;TextEditor;",
          "MimeType": "text/plain;text/x-chdr;text/x-csrc;text/x-c++hdr;text/x-c++src;text/x-java;text/x-makefile;text/x-python;application/x-shellscript;text/x-javascript;application/json;",
          "StartupNotify": "true",
          "Terminal": "false"
        }
      }
    }
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "codemirror": "^6.0.2",
    "electron-store": "^11.0.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "highlight.js": "^11.9.0",
    "keytar": "^7.9.0",
    "mammoth": "^1.11.0",
    "marked": "^16.4.0",
    "mermaid": "^11.12.0",
    "node-pty": "^1.1.0-beta37",
    "node-ssh": "^13.2.1",
    "pdfjs-dist": "^5.4.296",
    "sqlite3": "^5.1.7",
    "ssh2": "^1.15.0",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.0.1",
    "uuid": "^13.0.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-types": "^3.17.5",
    "xlsx": "^0.18.5",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "browserify": "^17.0.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "react-devtools": "^7.0.0"
  }
}
